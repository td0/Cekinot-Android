<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/init"
        android:id="@+id/prompt_n1"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/init"
        android:id="@+id/prompt_n2"
        android:layout_below="@+id/prompt_s1"
        android:gravity="bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/init"
        android:id="@+id/prompt_n3"
        android:layout_below="@+id/prompt_s2"
        android:gravity="bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/init"
        android:id="@+id/prompt_n4"
        android:layout_below="@+id/prompt_s3"
        android:gravity="bottom"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/prompt_s1"
        android:selectAllOnFocus="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:maxLength="4"
        android:gravity="end"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/prompt_s2"
        android:selectAllOnFocus="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:maxLength="4"
        android:layout_below="@id/prompt_s1"
        android:gravity="end"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/prompt_s3"
        android:selectAllOnFocus="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:maxLength="4"
        android:layout_below="@id/prompt_s2"
        android:gravity="end"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/prompt_s4"
        android:selectAllOnFocus="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:maxLength="4"
        android:layout_below="@id/prompt_s3"
        android:gravity="end"/>

</RelativeLayout>