<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tdh.cekinot.MainActivity"
    tools:showIn="@layout/activity_main">


    <!-- player name -->
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/name_p1"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:onClick="change_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/score1"
        android:layout_alignBaseline="@+id/name_p1"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/name_p2"
        android:layout_below="@+id/name_p1"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:onClick="change_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/score2"
        android:layout_alignBaseline="@+id/name_p2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/name_p3"
        android:layout_below="@+id/name_p2"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:onClick="change_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/score3"
        android:layout_alignBaseline="@+id/name_p3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/name_p4"
        android:layout_below="@+id/name_p3"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:onClick="change_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/init"
        android:id="@+id/score4"
        android:layout_alignBaseline="@+id/name_p4"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/div5"
        android:background="@color/colorAccent"
        android:layout_below="@+id/name_p4"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/init"
        android:id="@+id/total_match"
        android:layout_below="@id/div5"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp"/>



</RelativeLayout>
